@model IEnumerable<EmployeeApp.Models.Employee>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.EmployeeID)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Age)</th>
            <th>@Html.DisplayNameFor(m => m.Address)</th>
            <th>@Html.DisplayNameFor(m => m.Department)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Address</td>
                <td>@item.Department</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = item.EmployeeID })">Edit</a>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.EmployeeID })">View</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.EmployeeID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
