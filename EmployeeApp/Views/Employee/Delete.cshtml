@model EmployeeApp.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<h2 class="text-danger">Are you sure you want to delete this employee?</h2>

<div class="alert alert-warning">
    <dl class="row">
        <dt class="col-sm-3">Employee ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployeeID)</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
